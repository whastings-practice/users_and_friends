<!DOCTYPE html>
<html>
	<head>
	  <title>Socialthing</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

    <div class="container content-main">
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <%= link_to 'Users & Friends', '/', class: 'navbar-brand' %>
        </div>
        <div class="navbar-right user-controls">
          <% if current_user %>
            <p class="current-user-name">
              Signed-in as <%= current_user.email %>
            </p>
            <%= button_to 'Sign Out', session_url,
                method: :delete, class: 'btn btn-info btn-sign-out' %>
          <% else %>
            <%= link_to 'Sign In', new_session_url, class: 'btn btn-success' %>
            <%= link_to 'Sign Up', new_user_url, class: 'btn btn-info' %>
          <% end %>
        </div>
      </nav>

      <% if flash[:notice] %>
        <div class="row">
          <div class="alert alert-info col-md-12">
            <%= notice %>
          </div>
        </div>
      <% end %>

      <% if flash[:errors] %>
        <div class="alert alert-danger">
          <ul>
            <% flash[:errors].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <%= yield %>
      </div>
    </div>
	</body>
</html>
